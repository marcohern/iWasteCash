<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/purchase_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp" >

    <TextView
        android:id="@+id/purchase_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/purchase_list_item_title"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/purchase_list_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/purchase_list_item_title"
        android:text="@string/purchase_list_item_subtitle"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/purchase_list_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/purchase_list_item_image_desc"
        android:src="@android:drawable/ic_menu_gallery" />

</RelativeLayout>
